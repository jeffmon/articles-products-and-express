<div>
  <form action="/articles-edit" method="post">
    <input type="hidden" name="_method" value="PUT">
    <label for="title">Title</label>
    <input id="title" type="text" name="title" value= {{article.title}}>
    <br>
    <label for="author">Author</label>
    <input id="author" type="text" name="author" value= {{article.author}}>
    <br>
    <label for="body">Body</label>
    <input id="body" type="text" name="body" value= {{article.body}}>
    <br>
    <input type="submit" value="Send">
  </form>
</div>
